<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:state_focused="true" android:state_pressed="true">
        <color android:color="@color/colorPrimary" />
    </item>
    <item android:state_checked="false" android:state_pressed="true">
        <color android:color="#909090" />
    </item>
    <item android:state_checked="false">
        <color android:color="?colorSurface" />
    </item>

    <!-- THIS ITEM MUST BE THE 4TH ELEMENT. IF REORDERED OR ADDED/REMOVED OTHER ITEMS,
         THEN UPDATE setColorOfAllUnits() METHOD IN AddItemFragment -->
    <item android:state_checked="true">
        <color android:color="?unitUnfocusedColor" />
    </item>
</selector>
