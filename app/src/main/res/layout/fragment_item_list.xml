<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- "paddingBottom" is for the last item (also set "clipToPadding" to "false" so children are not clipped) -->
    <!-- To remove scroll glow when at the end of the list, set "android:overScrollMode" to "never" -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:paddingTop="6dp"
        android:paddingBottom="42dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:context=".ui.fragment.ItemsFragment"
        tools:itemCount="6"
        tools:listitem="@layout/item_list_row" />

    <ImageView
        android:id="@+id/emptyHint1"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="80dp"
        android:alpha="0"
        app:srcCompat="@drawable/empty_item"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/emptyHint2"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="50dp"
        android:alpha="0"
        app:srcCompat="@drawable/empty_item"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/emptyHint3"
        android:layout_width="154dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:alpha="0"
        android:background="@drawable/empty_item"
        android:gravity="center"
        android:text="@string/placeholder_empty" />

    <ImageView
        android:id="@+id/emptyHint4"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginStart="24dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="24dp"
        android:alpha="0"
        app:srcCompat="@drawable/empty_item"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/emptyHint5"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginStart="36dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="36dp"
        android:alpha="0"
        app:srcCompat="@drawable/empty_item"
        tools:ignore="ContentDescription" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/snbContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="86dp" />

</FrameLayout>
