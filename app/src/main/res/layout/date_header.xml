<?xml version="1.0" encoding="utf-8"?>
<!-- Wrap the text view in FrameLayout to be able to center it horizontally -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- NOTE: elevation did not work for the current date header
          (the rolling header) no matter what I did! Be aware that
          the previous header is made invisible in StateDetailsFragment.
         Note (An unrelated caution): that for the elevation to work the
          background color should be colorSurface or similar.
          See https://medium.com/androiddevelopers/dark-theme-with-mdc-4c6fc357d956
          For how to set elevation for a custom view -->
    <TextView
        android:id="@+id/headerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_date_header"
        android:paddingHorizontal="24dp"
        android:paddingVertical="8dp"
        android:textStyle="bold"
        tools:text="چهارشنبه ۲۶ تیر ۱۳۹۸" />

</FrameLayout>
