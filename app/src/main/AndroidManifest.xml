<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pleon.buyt">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- The app can function without location features so we specify it as not required -->
    <uses-feature
        android:name="android.hardware.location"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.ItemListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.AddItemActivity"
            android:parentActivityName=".ui.ItemListActivity" />
        <activity android:name=".ui.CreateStoreActivity"></activity>
    </application>

</manifest>
